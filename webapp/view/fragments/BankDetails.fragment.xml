<core:FragmentDefinition
xmlns:core = "sap.ui.core"
xmlns= "sap.m">

<Panel id="Panel" expandable="false" headerText="Account Details" width="95%" class="sapUiResponsiveMargin">
      
      <content> 

      <HBox id="_IDGenHBox1" >
      <Avatar id="Avatar" src=""  displaySize="XL" showBorder="true" press="onPress" />
  
      <VBox id="_IDGenVBox1" class="sapUiSmallMargin  sapUiLargeMarginBegin" >
        <Title id="_IDGenTitle1" text="{i18n>acctitle}" level="H1" class="sapUiSmallMarginBottom " /> 

      <HBox id="_IDGenHBox" > 
        <Label id="_IDGenLabel"  text="{i18n>accnum}" class="sapUiSmallMarginEnd"/>
        <Text id="_IDGenText" text="3456789*******"></Text>
      </HBox> 

      <HBox id="_IDGenHBox2" > 
        <Label id="_IDGenLabel1"  text="{i18n>hldname}" class="sapUiSmallMarginEnd"/>
        <Text id="_IDGenText1" text="Jaslin"></Text>
      </HBox>

      <HBox id="_IDGenHBox3" > 
        <Label id="_IDGenLabel2"  text="{i18n>code}" class="sapUiSmallMarginBottom"/>
        <Text id="_IDGenText2" text="0000*******"></Text>
      </HBox> 

       <Button id="_IDGenButton3" text="{i18n>info}" type="Neutral" press=".onOpenDialog"/>

      </VBox>  
      </HBox>

      </content>
      
      </Panel>

</core:FragmentDefinition>